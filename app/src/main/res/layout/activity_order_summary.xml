<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".OrderSummary">


    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Order Details"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Item"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Price"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drinks"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/drinkQuantity"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:text="0"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/drinkPrice"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sandwiches"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/sandwichPrice"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:text="0"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/sandwichQuantity"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="25dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snacks"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/snackQuantity"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:text="0"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/snackPrice"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:text="0"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="25dp" />


    </LinearLayout>

    </LinearLayout>


</LinearLayout>